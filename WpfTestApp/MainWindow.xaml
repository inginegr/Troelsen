<Window x:Class="DataParallelismWithForEach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataParallelismWithForEach"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="MainWindow" Height="400" Width="675">
    <Canvas>
        <Button Name="bOne" Height="30" Width="50" Click="BOne_Click" Canvas.Top="40" Canvas.Left="40" Content="First"/>
        <Button Name="bTwo" Height="30" Width="50" Click="BTwo_Click"  Canvas.Top="80" Canvas.Left="40" Content="Second"/>
        <Button Name="bThird" Height="30" Width="50" Click="BThird_Click"  Canvas.Top="120" Canvas.Left="40" Content="Third"/>

        <Border BorderThickness="2" BorderBrush="Green" Canvas.Left="100" Canvas.Bottom="0" Canvas.Right="0" Canvas.Top="0">
            <Image Name="MyImg" Stretch="None"/>
        </Border>
    </Canvas>
</Window>