<Window x:Class="DataParallelismWithForEach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataParallelismWithForEach"
        mc:Ignorable="d"
        Title="NotePad" Height="295.333" Width="400">
    <DockPanel Background="AliceBlue">
        <Menu DockPanel.Dock="Top" HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="_File">
                <Separator/>
                <MenuItem Header="_Exit" MouseEnter="MenuItem_MouseEnter_Exit" MouseLeave="MenuItem_MouseLeave_Exit"
                          Click="MenuItem_Click_Exit"/>                
            </MenuItem>
            <MenuItem Header="_Tools">
                <Separator/>
                <MenuItem Header="_Spelling Hints" MouseEnter="MenuItem_MouseEnter_Tools" MouseLeave="MenuItem_MouseLeav_Tools" Click="MenuItem_Click_Tools"/>
            </MenuItem>
        </Menu>
        
        <ToolBar DockPanel.Dock="Top" VerticalAlignment="Top">
            <Button Content="Exit" MouseEnter="MouseEneterExitArea" MouseLeave="MouseLeaveArea" Click="FileExit_Click"/>
            <Button Content="Check" MouseEnter="MouseEnterToolsHintsArea" MouseLeave="MouseLeaveArea" Click="ToolsSpllingHints_Click" Cursor="Help"/>
        </ToolBar>

        <StatusBar DockPanel.Dock="Bottom" Background="Beige" VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock Name="statBarText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
     </DockPanel>
</Window>