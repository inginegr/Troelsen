<Window x:Class="DataParallelismWithForEach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataParallelismWithForEach"
        mc:Ignorable="d"
        Title="NotePad" Height="295.333" Width="600">
    
    <DockPanel Background="AliceBlue">
        <TabControl Height="265" VerticalAlignment="Top" Width="Auto">
            <TabItem Header="Ink API">
                <StackPanel Background="#FFE5E5E5">
                    <ToolBar Height="30">
                        <Border Margin="0,2,0,0" Width="Auto">
                            <WrapPanel Orientation="Horizontal">
                                <RadioButton x:Name="inkRadio" Content="Ink Mode" IsChecked="True" Click="RadioButtonClicked"/>
                                <RadioButton x:Name="eraseRadio" Content="Erase Mode" Click="RadioButtonClicked"/>
                                <RadioButton x:Name="selectRadio" Content="Select Mode" Click="RadioButtonClicked"/>
                            </WrapPanel>
                        </Border>

                        <Separator/>
                        <ComboBox Width="100" x:Name="comboColors" SelectionChanged="ColorChanged">
                            <ComboBoxItem x:Name="cmbRed" Content="Red" IsSelected="True"/>
                            <ComboBoxItem x:Name="cmbBlue" Content="Blue"/>
                            <ComboBoxItem x:Name="cmbGreen" Content="Green"/>
                        </ComboBox>
                        <Separator/>
                        
                        <Grid Background="LightBlue">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" x:Name="btnSave" Width="50" Content="Save"/>
                            <Button Grid.Column="1" x:Name="btnLoad" Width="50" Content="Load"/>
                            <Button Grid.Column="2" x:Name="btnClear" Width="50" Content="Clear"/>
                        </Grid>
                    </ToolBar>
                    <InkCanvas x:Name="MyInkCanvas" Background="#FFB6F4F1" />
                </StackPanel>
            </TabItem>
            <TabItem Header="DataBinding">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="DataGrid">
                <StackPanel Background="BlanchedAlmond">                    
                </StackPanel>
            </TabItem>
        </TabControl>

    </DockPanel>
</Window>